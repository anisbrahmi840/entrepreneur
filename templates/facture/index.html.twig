{% extends 'base.html.twig' %}

{% block title %}Liste de factures
{% endblock %}

{% block body %}
<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    <h1>Liste des factutres</h1>
                </div>
                <a href="{{ path('facture_new') }}" class="btn btn-primary mb-2">Ajouter une facture</a>
            </div>
        </div>
        {% if not factures is  empty %}
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Ref</th>
                    <th>Client</th>
                    <th>Date facturation</th>
                    <th>Mf</th>
                    <th>PrixTTC</th>
                    <th>PrixHT</th>
                </tr>
            </thead>
            <tbody>
                {% for facture in factures %}
                <tr class="">
                    <td>{{ facture.ref }}</td>
                    <td>{{ facture.client }}</td>
                    <td>{{ facture.dateFact ? facture.dateFact|date('d-m-Y') : '' }}</td>
                    <td>{{ facture.mf }}</td>
                    <td>{{ facture.prixTTC }}
                        DT</td>
                    <td>{{ facture.prixHT }}
                        DT</td>
                    <td>
                        <a href="{{ path('facture_show', {'id': facture.id}) }}">
                            <i class="fa fa-file"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <tr>
            <td colspan="8">Aucun enregistrement trouv√©</td>
        </tr>
        {% endif %}
        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(factures) }}
        </div>
    </div>
</section>
{% endblock %}