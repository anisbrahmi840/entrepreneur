{% extends 'base.html.twig' %}

{% block title %}Liste des devis
{% endblock %}

{% block body %}
<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    <h1>Liste des devis</h1>
                </div>
                <a href="{{ path('devis_new') }}" class="btn btn-primary mb-2">Ajouter un devis</a>
            </div>
        </div>
        {% if not devis is  empty %}
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Ref</th>
                    <th>Client</th>
                    <th>Date</th>
                    <th>Mf</th>
                    <th>PrixTTC</th>
                </tr>
            </thead>
            <tbody>
                {% for devi in devis %}
                <tr class="">
                    <td>{{ devi.ref }}</td>
                    <td>{{ devi.client }}</td>
                    <td>{{ devi.dateFact ? devi.dateFact|date('Y-m-d') : '' }}</td>
                    <td>{{ devi.mf }}</td>
                    <td>{{ devi.prixTTC }}DT</td>
                    <td>
                        <a href="{{ path('devis_show', {'id': devi.id}) }}">
                            <i class="fa fa-file"></i>
                        </a>
                    </td>
                </tr>

                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <tr>
            <td colspan="8">Aucun enregistrement trouv√©</td>
        </tr>
        {% endif %}
        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(devis) }}
        </div>
    </div>
</section>
{% endblock %}