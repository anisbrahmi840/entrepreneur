{% extends 'base.html.twig' %}

{% block title %}Actualite{% endblock %}

{% block body %}
<section id="blog-main" class="blog-main grid section">
	<div class="container">
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12">
				<div class="section-title">
					<h1>ACTUALITÃ‰S</h1>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="blog-main">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<div class="row">
						{% for actualite in actualites %}
						<div class="col-md-4 col-sm-4 col-xs-12">
							<!-- Single Post -->
							<div class="single-blog slider">
								<div class="blog-post">
									<div class="blog-head">
										<div class="">
											<div class="single-slide">
												<img src="{{actualite.image}}" alt="">
											</div>
										</div>
									</div>
									<div class="blog-info">
										<h2><a
												href="{{path('actualite_show_entrepreneur', {ref: actualite.ref})}}">{{actualite.title}}</a>
										</h2>
										<div class="meta">
											<span><i
													class="fa fa-calendar-o"></i>{{actualite.createdAt | date('d-m-Y')}}</span>
										</div>
										<p>{{ actualite.description|u.truncate(100, '...') }}</p>
										<div class="text-center">
											<a href="{{path('actualite_show_entrepreneur', {ref: actualite.ref})}}">
												<i class="fa fa-angle-double-right fa-lg text-danger"> Voir plus
												</i></a>
										</div>
									</div>
								</div>
							</div>
							<!--/ End Single Post -->
						</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="navigation d-flex justify-content-center mt-4">
		{{ knp_pagination_render(actualites) }}
	</div>
</section>

{% endblock %}